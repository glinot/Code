<UserControl x:Class="INSAWorld.Views.Game.UserScoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:INSAWorld.ViewModel">
    <materialDesign:ColorZone Grid.Row="1" Grid.Column="2" Mode="PrimaryDark" VerticalAlignment="Stretch">
        <TextBlock Style="{DynamicResource MaterialDesignHeadlineTextBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Player.VictoryPoints}" />
    </materialDesign:ColorZone>
</UserControl>
