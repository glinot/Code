<UserControl x:Class="INSAWorld.Views.Home.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:INSAWorld.ViewModel">
    <StackPanel>
        <Button Style="{DynamicResource MaterialDesignRaisedButton}" Margin="0 0 0 16" Command="{Binding NewGameCommand}">
            NEW GAME
        </Button>
        <Button Style="{DynamicResource MaterialDesignRaisedButton}" Margin="0 16" Command="{Binding LoadGameCommand}">
            LOAD GAME
        </Button>
        <Button Style="{DynamicResource MaterialDesignRaisedButton}" Margin="0 16" Command="{Binding ReplayGameCommand}">
            REPLAY GAME
        </Button>    
        <Button Style="{DynamicResource MaterialDesignRaisedButton}" Margin="0 16 0 0" Command="{Binding ExitCommand}">
            EXIT
        </Button>    
</StackPanel>
</UserControl>